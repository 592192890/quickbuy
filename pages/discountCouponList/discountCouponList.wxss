.bottomContent {
  display: flex;
  margin-top: -13rpx;
  width: 630rpx;
  align-items: center;
  /* z-index:-1;  *//* justify-content: center; *//* height: 80rpx; *//* margin-top: -28rpx; */
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background-color: white;
  /* border: 1rpx solid black;    */
}

.coupon_detail_show_content {
  display: flex;
  /* flex: left;
    text-align: left; */
  top: 10rpx;
  right: 50rpx;
  bottom: 20rpx;
  left: 20rpx;
  /* margin: 10rpx,20rpx,20rpx,20rpx; *//* width: 590rpx; *//* font-size: 26rpx; *//* border: 1rpx solid blue;    */
}

.coupon_detail_head {
  display: flex;
  align-items: center;
  justify-content: center;
}

.di_row {
  flex-direction: row;
}

.di_column {
  flex-direction: column;
}

.coupon_detail_head_text {
  font-size: 26rpx;
  color: #555;
  width: 630rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
  /* border: 1rpx solid red;    */
}

.coupon_detail_head_arrow {
  float: right;
  right: 0rpx;
  bottom: 0rpx;
  width: 32rpx;
  height: 32rpx;
  z-index: 1000;
  /* border: 1rpx solid blue;    */
}

.coupon_detail_head_arrow:after {
  content: "\e799";
  color: #555;
  font-size: 25rpx;
}

.coupon_detail_show_body {
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
  /* background-color: wheat; */
}

.coupon_detail_show_arrow {
  /* background-color: red; */
  margin-bottom: 14rpx;
}

.coupon_detail_show_arrow::after {
  content: "\e796";
  color: #555;
  font-size: 25rpx;
}

.loading {
  padding: 10rpx;
  text-align: center;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  animation: rotate 1s linear infinite;
}

.loading.complete:before {
  display: none;
}
