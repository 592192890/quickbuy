  width: 140rpx;
  right: 10rpx;
  padding-right: 5rpx;
  padding-left: 5rpx;
  color: #333;
  font-size: 26rpx;
  border: 1px solid #666;
  border-radius: 5rpx;
}

.coupon_left .deadline {
  color: #999;
  margin-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 24rpx;
  height: 32rpx;
}

.coupon_qr {
  width: 98rpx;
  height: 98rpx;
  bottom: 15rpx;
}

.uses_btn {
  display: flex;
  background-color: white;
  width: 120rpx;
  height: 42rpx;
  align-items: center;
  justify-content: center;
  border-radius: 21rpx;
  margin-top: 14rpx;
}

.uses_btn text {
  color: #f76666;
  font-size: 22rpx;
}

.coupon_right {
  display: flex;
  flex-direction: column;
  width: 195rpx;
