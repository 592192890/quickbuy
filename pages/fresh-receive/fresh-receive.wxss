/* pages/fresh-receive/fresh-receive.wxss */
page{
    background-color:#f6f6f6;
}
.new-header{
    background-color:#ffffff;
    padding-top:50rpx;
    margin-bottom:30rpx;
}
.new-header .new-img{
    text-align:center;
    margin-bottom:20rpx;
}
.new-header .new-img:before{
    content:'\e617';
    color:#55c788;
    font-size:32rpx;
}
.new-header .new-img .result{
    font-size:32rpx;
    color:#55c788;
    margin-left:10rpx;
}
.new-header .price{
    color:#333333;
    font-size:70rpx;
    margin-bottom:35rpx;
    text-align:center;
}
.new-header .tip{
    font-size:28rpx;
    color:#666666;
    text-align:center;
    margin-left:82rpx;
    margin-right:82rpx;
    padding-bottom:36rpx;
    line-height:38rpx;
}
.new-header .tip .red{
    color:#f95d5b;
}
.new-detail{
    background-color:#ffffff;
    padding:30rpx;
    color:#666666;
    font-size:26rpx;
    line-height:36rpx;
    position:relative;
    margin-bottom:10rpx;
}
.new-detail .color{
    color:#f95d5b;
}
.new-detail .btn{
    font-size:30rpx;
    color:#333333;
    position:absolute;
    right:30rpx;
    top:50%;
    transform:translateY(-50%);
}
.new-detail .btn .new-img:after{
    content:'\e623';
    color:#cccccc;
    font-size:28rpx;
    margin-left:10rpx;
}
.new-list{
    background-color:#ffffff;
    padding-left:30rpx;
    /* padding-right:30rpx; */
}
.new-list .content{
    /* padding-top:30rpx;
    padding-bottom:30rpx; */
    height:190rpx;
    position:relative;
    border-bottom:1rpx solid #efefef;
}
.new-list .content .wrap{
    position:absolute;
    top:50%;
    transform:translateY(-50%);
}
.new-list .content .name{
    font-size:34rpx;
    color:#333333;
    /*height:80px;*/
    line-height:40rpx;
    margin-bottom:10rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    width:450rpx;
}
.new-list .content .price-num{
    color:#666666;
}
.new-list .content .price-num .num{
    font-size:26rpx;
    margin-right:20rpx;
}
.new-list .content .price-num .price{
    font-size:28rpx;
}
.new-list .content .btn{
    display: none;
    font-size:32rpx;
    color:#333333;
    width:170rpx;
    height:70rpx;
    line-height:70rpx;
    background-color:#ffda44;
    border-radius:8rpx;
    text-align:center;
    position:absolute;
    top:50%;
    right:30rpx;
    transform:translateY(-50%);
}
.new-list .content .btn.show{
    display: block;
}
.new-list .content .success{
    display: none;
    font-size:32rpx;
    color:#333333;
    width:170rpx;
    /* height:70rpx; */
    line-height:40rpx;
    text-align:center;
    position:absolute;
    top:50%;
    right:30rpx;
    transform:translateY(-50%);
}
.new-list .content .success .tips{
    color:#f95d5b;
    margin-bottom:16rpx;
}
.new-list .content .success .time{
    color:#666666;
    font-size:26rpx;
}
.new-list .content .success.show{
    display: block;
}
.space{
    height:100rpx;
}
.new-footer{
    position:fixed;
    bottom:0px;
    display: flex;
    width:100%;
    background-color:#ffffff;
    height:100rpx;
    align-items:center;
    border-top:1rpx solid #cccccc;
    box-sizing:border-box;
}
.new-footer .item{
    flex:1;
    text-align:center;
    font-size:22rpx;
    color:#333333;
    margin-top:10rpx;
}
.new-footer .item .name{
    font-size:22rpx;
    color:#000000;
    /* margin-top:2rpx; */
}
.new-footer .item image{
    width:48rpx;
    height:48rpx;
}